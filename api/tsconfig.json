{
   "compilerOptions": {
      "lib": ["es6"],
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "removeComments": true,
      "esModuleInterop": true 
   },
   "include": ["src/**/*"],
  "exclude": ["node_modules"]
}